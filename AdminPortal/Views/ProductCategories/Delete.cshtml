@{
    Layout = "_Layout";
}

@model IEnumerable<AdminPortal.Models.ProductCategoriesModel>

<div class="row">
    <div class="col-md-12">

        
        <table class="table table-sm table-bordered">
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>